{
  "$schema": "http://json-schema.org/schema",
  "type": "object",
  "title": "QBE Printer definition schema",
  "additionalProperties": false,
  "properties": {
    "requires": {
      "title": "Dependencies",
      "type": "array",
      "items": {
        "$ref": "#/definitions/Dependency"
      }
    },
    "mcus": {
      "title": "MCUs",
      "type": "array",
      "items": {
        "$ref": "#/definitions/MCU"
      }
    }
  },
  "required": [
    "requires"
  ],
  "definitions": {
    "MCU": {
      "type": "object",
      "a": "",
      "properties": {
        "allOf": [
          {
            "preset": {
              "title": "Config preset to use",
              "type": "string"
            }
          }
        ],
        "oneOf": [
          {
            "can-id": {
              "type": "string"
            }
          }
        ]
      },
      "required": [
        "preset"
      ]
    },
    "Dependency": {
      "anyOf": [
        {
          "$ref": "#/definitions/GitDependency"
        },
        {
          "$ref": "#/definitions/ZipDependency"
        },
        {
          "$ref": "#/definitions/LocalDependency"
        },
        {
          "$ref": "#/definitions/InternalDependency"
        }
      ]
    },
    "InternalDependency": {
      "allOf": [
        {
          "$ref": "#/definitions/BaseDependency"
        }
      ],
      "properties": {
        "internal": {
          "type": "string",
          "title": "Internal package name"
        }
      },
      "required": [
        "internal"
      ]
    },
    "LocalDependency": {
      "allOf": [
        {
          "$ref": "#/definitions/BaseDependency"
        }
      ],
      "properties": {
        "local": {
          "type": "string",
          "title": "Local package path"
        }
      },
      "required": [
        "local"
      ]
    },
    "GitDependency": {
      "allOf": [
        {
          "$ref": "#/definitions/BaseDependency"
        }
      ],
      "properties": {
        "git": {
          "type": "string",
          "title": "Repository address"
        },
        "branch": {
          "type": "string",
          "title": "Repository branch",
          "default": "master"
        }
      },
      "required": [
        "git"
      ]
    },
    "ZipDependency": {
      "allOf": [
        {
          "$ref": "#/definitions/BaseDependency"
        }
      ],
      "properties": {
        "zip": {
          "type": "string",
          "title": "Archive path or url"
        }
      },
      "required": [
        "zip"
      ]
    },
    "BaseDependency": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "options": {
          "type": "object",
          "title": "Installation options",
          "additionalProperties": true
        }
      }
    }
  }
}